<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
    <% end %>
    <div>
        <nav>
            <ul>
                <li><%=link_to "New Post...", new_post_path%></li>
            </ul
        </nav>
    </div>
    <%= yield %>

</body>
</html>
